{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "produtoRoute": {
        "ClusterId": "produtoCluster",
        "Match": { "Path": "/api/produto/{**catch-all}" }
      },
      "estoqueRoute": {
        "ClusterId": "estoqueCluster",
        "Match": { "Path": "/api/estoque/{**catch-all}" }
      },
      "pedidoRoute": {
        "ClusterId": "pedidoCluster",
        "Match": { "Path": "/api/pedido/{**catch-all}" }
      },
      "faturamentoRoute": {
        "ClusterId": "faturamentoCluster",
        "Match": { "Path": "/api/faturamento/{**catch-all}" }
      },
      "reciboRoute": {
        "ClusterId": "reciboCluster",
        "Match": { "Path": "/api/recibo/{**catch-all}" }
      }
    },
    "Clusters": {
      "produtoCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:5000/" }
        }
      },
      "estoqueCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:5001/" }
        }
      },
      "pedidoCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:53740/" }
        }
      },
      "faturamentoCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:61296/" }
        }
      },
      "reciboCluster": {
        "Destinations": {
          "dest1": { "Address": "http://localhost:62217/" }
        }
      }
    }
  }
