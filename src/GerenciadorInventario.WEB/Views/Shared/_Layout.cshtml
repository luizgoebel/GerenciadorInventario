<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gerenciador de Inventário</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GerenciadorInventario.WEB.styles.css" asp-append-version="true" />
    <style>
        body { overflow-x: hidden; }
        .sidebar { width: 260px; transition: margin-left .25s ease-in-out; }
        .sidebar .nav-link { color: #fff; }
        .sidebar .nav-link.active { background-color: rgba(255,255,255,.15); }
        .sidebar-collapsed .sidebar { margin-left: -260px; }
        .content { transition: margin-left .25s ease-in-out; margin-left: 260px; }
        .sidebar-collapsed .content { margin-left: 0; }
        .sidebar { position: fixed; top: 0; bottom: 0; left: 0; background-color: #0d6efd; padding-top: 56px; overflow-y:auto; }
        .topbar { position: fixed; top: 0; left: 0; right: 0; z-index: 1030; }
        @@media (max-width: 991.98px) {
            .content { margin-left: 0; }
            .sidebar { margin-left: -260px; }
            .sidebar.show { margin-left: 0; }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary topbar">
        <div class="container-fluid">
            <button id="btnSidebarToggle" class="btn btn-outline-light me-2" type="button" aria-label="Alternar menu">
                <i class="fa-solid fa-bars"></i>
            </button>
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Inventário</a>
        </div>
    </nav>

    <div class="sidebar text-white">
        <div class="p-3">
            <div class="fw-bold text-uppercase small mb-2">Navegação</div>
            <nav class="nav flex-column gap-1">
                <a class="nav-link" asp-controller="Produto" asp-action="Index"><i class="fa-solid fa-box me-2"></i>Produtos</a>
                <a class="nav-link" asp-controller="Estoque" asp-action="Index"><i class="fa-solid fa-warehouse me-2"></i>Estoque</a>
                <a class="nav-link" asp-controller="Pedido" asp-action="Index"><i class="fa-solid fa-cart-shopping me-2"></i>Pedidos</a>
                <a class="nav-link" asp-controller="Faturamento" asp-action="Index"><i class="fa-solid fa-file-invoice-dollar me-2"></i>Faturamento</a>
                <a class="nav-link" asp-controller="Recibo" asp-action="Index"><i class="fa-solid fa-receipt me-2"></i>Recibos</a>
                <a class="nav-link" asp-controller="Home" asp-action="Privacy"><i class="fa-solid fa-shield-halved me-2"></i>Privacy</a>
            </nav>
        </div>
    </div>

    <div class="content">
        <main class="container-fluid" style="padding-top: 72px;">
            @RenderBody()
        </main>
        <footer class="border-top footer text-muted mt-3">
            <div class="container">
                &copy; @DateTime.Now.Year - Gerenciador de Inventário
            </div>
        </footer>
    </div>

    <div id="modalHost"></div>
    <div id="confirmHost"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/ui.js" asp-append-version="true"></script>
    <script>
        (function(){
            const root = document.body;
            const btn = document.getElementById('btnSidebarToggle');
            btn?.addEventListener('click', () => {
                if (window.matchMedia('(max-width: 991.98px)').matches) {
                    document.querySelector('.sidebar')?.classList.toggle('show');
                } else {
                    root.classList.toggle('sidebar-collapsed');
                }
            });
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
