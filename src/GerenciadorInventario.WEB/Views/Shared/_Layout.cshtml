<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gerenciador de Inventário</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GerenciadorInventario.WEB.styles.css" asp-append-version="true" />
    <style>
        html, body { height: 100%; }
        body { overflow-x: hidden; }
        .sidebar { width: 260px; transition: margin-left .25s ease-in-out; }
        .sidebar .nav-link { color: #fff; }
        .sidebar .nav-link.active { background-color: rgba(255,255,255,.15); }
        .sidebar-collapsed .sidebar { margin-left: -260px; }
        .content { transition: margin-left .25s ease-in-out; margin-left: 260px; min-height: 100vh; }
        .sidebar-collapsed .content { margin-left: 0; }
        .sidebar { position: fixed; top: 0; bottom: 0; left: 0; background-color: #000; padding-top: 56px; overflow-y:auto; }
        .topbar { position: fixed; top: 0; left: 0; right: 0; z-index: 1030; }
        main.container-fluid { padding-top: 72px; display: flex; flex-direction: column; min-height: calc(100vh - 72px); }
        /* Make table containers flex to push pagination to bottom */
        #produtoTableContainer, #estoqueTableContainer, #pedidoTableContainer, #faturamentoTableContainer, #reciboTableContainer { display: flex; flex-direction: column; flex: 1 1 auto; }
        @@media (max-width: 991.98px) {
            .content { margin-left: 0; }
            .sidebar { margin-left: -260px; }
            .sidebar.show { margin-left: 0; }
        }

        .toast-container { position: fixed; top: 72px; right: 12px; z-index: 1080; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark topbar">
        <div class="container-fluid">
            <button id="btnSidebarToggle" class="btn btn-outline-light me-2" type="button" aria-label="Alternar menu" data-bs-toggle="tooltip" data-bs-title="Exibir/ocultar menu">
                <i class="fa-solid fa-bars"></i>
            </button>
            <a class="navbar-brand" asp-controller="Home" asp-action="Index" title="Home" aria-label="Home">
                <i class="fa-solid fa-user"></i>
            </a>
        </div>
    </nav>

    <div class="sidebar text-white">
        <div class="p-3">
            <nav class="nav flex-column gap-1">
                <a class="nav-link" asp-controller="Produto" asp-action="Index"><i class="fa-solid fa-box me-2"></i>Produtos</a>
                <a class="nav-link" asp-controller="Estoque" asp-action="Index"><i class="fa-solid fa-warehouse me-2"></i>Estoque</a>
                <a class="nav-link" asp-controller="Pedido" asp-action="Index"><i class="fa-solid fa-cart-shopping me-2"></i>Pedidos</a>
                <a class="nav-link" asp-controller="Home" asp-action="Privacy"><i class="fa-solid fa-shield-halved me-2"></i>Privacy</a>
            </nav>
        </div>
    </div>

    <div class="content">
        <main class="container-fluid">
            @RenderBody()
        </main>
    </div>

    <div id="modalHost"></div>
    <div id="confirmHost"></div>
    <div id="toastHost" class="toast-container"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/i18n.js" asp-append-version="true"></script>
    <script src="~/js/ui.js" asp-append-version="true"></script>
    <script>
        (function(){
            const root = document.body;
            const btn = document.getElementById('btnSidebarToggle');
            btn?.addEventListener('click', () => {
                if (window.matchMedia('(max-width: 991.98px)').matches) {
                    document.querySelector('.sidebar')?.classList.toggle('show');
                } else {
                    root.classList.toggle('sidebar-collapsed');
                }
            });
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
