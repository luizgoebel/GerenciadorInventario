@model GerenciadorInventario.WEB.ViewModels.FaturamentoVm
@{
    ViewData["Title"] = "Faturamento";
}
<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <div class="input-group" style="max-width: 280px;">
                <input id="txtPedidoIdFaturar" type="number" class="form-control" placeholder="Pedido Id" />
                <button id="btnFaturar" class="btn btn-success"><i class="fa fa-file-invoice-dollar me-1"></i> Faturar</button>
            </div>
        </div>
        <div class="input-group" style="max-width: 380px;">
            <input id="txtFiltroFaturamento" type="number" class="form-control" placeholder="Filtrar por PedidoId..." />
            <button id="btnFiltrarFaturamento" class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
        </div>
    </div>

    <div id="faturamentoTableContainer"></div>
</div>

@section Scripts {
    <script src="~/js/ui.js" asp-append-version="true"></script>
    <script src="~/js/domain/faturamento.js" asp-append-version="true"></script>
    <script>
        window.FaturamentoPage.init();
    </script>
}
