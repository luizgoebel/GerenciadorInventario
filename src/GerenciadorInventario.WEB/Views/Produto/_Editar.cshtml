@model GerenciadorInventario.WEB.ViewModels.ProdutoEditVm
<div class="container-fluid">
    <form id="produtoForm">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Nome</label>
                <input name="Nome" class="form-control" value="@(Model.Id.HasValue ? Model.Atualizacao.Nome : Model.Novo.Nome)" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Preço</label>
                <input name="Preco" type="number" step="0.01" class="form-control" value="@(Model.Id.HasValue ? Model.Atualizacao.Preco : Model.Novo.Preco)" />
            </div>
            <div class="col-md-12">
                <label class="form-label">Descrição</label>
                <textarea name="Descricao" class="form-control">@(Model.Id.HasValue ? Model.Atualizacao.Descricao : Model.Novo.Descricao)</textarea>
            </div>
        </div>
    </form>
</div>
<div class="d-flex justify-content-end gap-2 mt-3">
    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    <button id="btnSalvarProduto" class="btn btn-primary">Salvar</button>
</div>
<script>
    (function(){
        const isEdit = @(Model.Id.HasValue.ToString().ToLower());
        const id = @(Model.Id ?? 0);
        document.getElementById('btnSalvarProduto').addEventListener('click', async function(){
            const form = document.getElementById('produtoForm');
            const data = Object.fromEntries(new FormData(form).entries());
            data.Preco = parseFloat(data.Preco);
            let url = isEdit ? `/Produto/Editar?id=${id}` : '/Produto/Criar';
            const res = await Ui.postJson(url, data);
            if(res){
                document.querySelector('#modalHost .modal.show .btn-close')?.click();
                window.ProdutoPage.reloadTable();
            }
        });
    })();
</script>
