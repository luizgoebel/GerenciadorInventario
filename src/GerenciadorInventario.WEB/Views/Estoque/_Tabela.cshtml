@model GerenciadorInventario.WEB.ViewModels.EstoqueVm
<div class="d-flex align-items-center justify-content-between mb-2">
    <h5 class="mb-0">Estoque</h5>
    <div></div>
</div>
<table class="table table-hover align-middle" id="estoqueGrid">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Quantidade</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Dados.Items.Any())
        {
            <tr>
                <td colspan="3" class="text-center text-muted py-4">Nenhum registro encontrado.</td>
            </tr>
        }
        else
        {
            foreach (var e in Model.Dados.Items)
            {
                <tr data-produto-id="@e.ProdutoId">
                    <td>@e.ProdutoNome</td>
                    <td>@e.Quantidade</td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary" data-action="view" data-id="@e.ProdutoId" data-bs-toggle="tooltip" data-bs-title="Visualizar" data-bs-placement="bottom"><i class="fa-solid fa-eye"></i></button>
                            <button class="btn btn-outline-success" data-action="entrada" data-id="@e.ProdutoId" data-bs-toggle="tooltip" data-bs-title="Entrada" data-bs-placement="bottom"><i class="fa-solid fa-plus"></i></button>
                            <button class="btn btn-outline-warning" data-action="saida" data-id="@e.ProdutoId" data-bs-toggle="tooltip" data-bs-title="Saída" data-bs-placement="bottom"><i class="fa-solid fa-minus"></i></button>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<nav aria-label="Paginação">
    <ul class="pagination justify-content-end">
        <li class="page-item @(Model.Dados.Page == 1 ? "disabled" : "")">
            <a class="page-link" href="#" data-page="@(Model.Dados.Page - 1)" data-bs-toggle="tooltip" data-bs-title="Página anterior" data-bs-placement="bottom">Anterior</a>
        </li>
        @for (var i = 1; i <= Math.Max(1, Model.Dados.TotalPages); i++)
        {
            <li class="page-item @(Model.Dados.Page == i ? "active" : "")"><a class="page-link" href="#" data-page="@i" data-bs-toggle="tooltip" data-bs-title="Ir para página @i" data-bs-placement="bottom">@i</a></li>
        }
        <li class="page-item @(Model.Dados.Page == Model.Dados.TotalPages ? "disabled" : "")">
            <a class="page-link" href="#" data-page="@(Model.Dados.Page + 1)" data-bs-toggle="tooltip" data-bs-title="Próxima página" data-bs-placement="bottom">Próximo</a>
        </li>
    </ul>
</nav>
<script>
  (function(){
    const grid = document.getElementById('estoqueGrid');
    if(!grid) return;
    grid.querySelectorAll('tbody tr').forEach(tr => {
      const pid = tr.getAttribute('data-produto-id');
      tr.addEventListener('click', (ev) => {
        // avoid conflict when clicking buttons in action column
        const inActions = ev.target.closest('.btn-group');
        if(inActions) return;
        window.__movAction = 'entrada';
        Ui.openModalFromUrl(`/Estoque/MovimentoEntrada?produtoId=${pid}`, 'Entrada de Estoque');
      });
    });
  })();
</script>
