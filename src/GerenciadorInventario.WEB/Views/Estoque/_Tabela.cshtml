@model GerenciadorInventario.WEB.ViewModels.EstoqueVm
<table class="table table-hover align-middle">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Quantidade</th>
            <th class="text-end">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Dados.Items.Any())
        {
            <tr>
                <td colspan="3" class="text-center text-muted py-4">Nenhum registro encontrado.</td>
            </tr>
        }
        else
        {
            foreach (var e in Model.Dados.Items)
            {
                <tr>
                    <td>@e.ProdutoNome (@e.ProdutoId)</td>
                    <td>@e.Quantidade</td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary" data-action="view" data-id="@e.ProdutoId" data-bs-toggle="tooltip" data-bs-title="Visualizar"><i class="fa-solid fa-eye"></i></button>
                            <button class="btn btn-outline-success" data-action="entrada" data-id="@e.ProdutoId" data-bs-toggle="tooltip" data-bs-title="Entrada"><i class="fa-solid fa-plus"></i></button>
                            <button class="btn btn-outline-warning" data-action="saida" data-id="@e.ProdutoId" data-bs-toggle="tooltip" data-bs-title="Saída"><i class="fa-solid fa-minus"></i></button>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<nav aria-label="Paginação">
    <ul class="pagination justify-content-end">
        <li class="page-item @(Model.Dados.Page == 1 ? "disabled" : "")">
            <a class="page-link" href="#" data-page="@(Model.Dados.Page - 1)" data-bs-toggle="tooltip" data-bs-title="Página anterior">Anterior</a>
        </li>
        @for (var i = 1; i <= Math.Max(1, Model.Dados.TotalPages); i++)
        {
            <li class="page-item @(Model.Dados.Page == i ? "active" : "")"><a class="page-link" href="#" data-page="@i" data-bs-toggle="tooltip" data-bs-title="Ir para página @i">@i</a></li>
        }
        <li class="page-item @(Model.Dados.Page == Model.Dados.TotalPages ? "disabled" : "")">
            <a class="page-link" href="#" data-page="@(Model.Dados.Page + 1)" data-bs-toggle="tooltip" data-bs-title="Próxima página">Próximo</a>
        </li>
    </ul>
</nav>
