@page
@model GerenciadorInventario.WEB.Models.Home.IndexModel
@{
    // ViewData["Title"] = "Início";
}
<div class="container-fluid">
    <div class="row g-3">
        <div class="col-md-3">
            <a asp-controller="Produto" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center gap-3">
                        <i class="fa-solid fa-box fa-2x text-primary"></i>
                        <div>
                            <div class="fw-bold">Produtos</div>
                            <div class="text-muted small">CRUD de produtos</div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Estoque" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center gap-3">
                        <i class="fa-solid fa-warehouse fa-2x text-primary"></i>
                        <div>
                            <div class="fw-bold">Estoque</div>
                            <div class="text-muted small">Movimentação e consulta</div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Pedido" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center gap-3">
                        <i class="fa-solid fa-cart-shopping fa-2x text-primary"></i>
                        <div>
                            <div class="fw-bold">Pedidos</div>
                            <div class="text-muted small">Criação, confirmação, cancelamento</div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Faturamento" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center gap-3">
                        <i class="fa-solid fa-file-invoice-dollar fa-2x text-primary"></i>
                        <div>
                            <div class="fw-bold">Faturamento</div>
                            <div class="text-muted small">Emitir faturas de pedidos</div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Recibo" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center gap-3">
                        <i class="fa-solid fa-receipt fa-2x text-primary"></i>
                        <div>
                            <div class="fw-bold">Recibos</div>
                            <div class="text-muted small">Consultar recibos</div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
