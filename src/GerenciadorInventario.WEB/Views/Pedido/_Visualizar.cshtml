@model GerenciadorInventario.WEB.Dtos.PedidoDto
<div class="container-fluid">
    <dl class="row">
        <dt class="col-sm-3">Id</dt>
        <dd class="col-sm-9">@Model.Id</dd>
        <dt class="col-sm-3">Data</dt>
        <dd class="col-sm-9">@Model.DataCriacao.ToString("g")</dd>
        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
        <dt class="col-sm-3">Total</dt>
        <dd class="col-sm-9">@Model.Total.ToString("C2")</dd>
    </dl>
    <h6>Itens</h6>
    <table class="table table-sm">
        <thead><tr><th>Produto</th><th>Qtd</th><th class="text-end">Unit.</th><th class="text-end">Subtotal</th></tr></thead>
        <tbody>
            @foreach (var i in Model.Itens)
            {
                <tr>
                    <td>@(i.ProdutoNome ?? i.ProdutoId.ToString())</td>
                    <td>@i.Quantidade</td>
                    <td class="text-end">@i.PrecoUnitario.ToString("C2")</td>
                    <td class="text-end">@i.Subtotal.ToString("C2")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="d-flex justify-content-end">
    <button class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
</div>
