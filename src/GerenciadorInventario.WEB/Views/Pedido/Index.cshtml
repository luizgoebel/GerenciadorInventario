@model GerenciadorInventario.WEB.ViewModels.PedidoListVm
@{
    ViewData["Title"] = "Pedidos";
}
<div class="container-fluid d-flex flex-column" style="min-height: calc(100vh - 72px);">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <button id="btnAddPedido" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-title="Criar novo pedido">
                <i class="fa-solid fa-plus me-1"></i> Adicionar
            </button>
        </div>
        <div class="input-group" style="max-width: 380px;">
            <input id="txtFiltroPedido" type="text" class="form-control" placeholder="Filtrar por status..." />
            <button id="btnFiltrarPedido" class="btn btn-outline-secondary" data-bs-toggle="tooltip" data-bs-title="Aplicar filtro"><i class="fa-solid fa-search"></i></button>
        </div>
    </div>

    <div id="pedidoTableContainer" class="flex-grow-1 d-flex flex-column"></div>
</div>

@section Scripts {
    <script src="~/js/ui.js" asp-append-version="true"></script>
    <script src="~/js/domain/pedido.js" asp-append-version="true"></script>
    <script>
        window.PedidoPage.init();
    </script>
}
