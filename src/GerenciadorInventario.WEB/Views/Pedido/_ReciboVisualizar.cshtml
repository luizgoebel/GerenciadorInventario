@model GerenciadorInventario.WEB.Dtos.ReciboDto
<div class="container-fluid">
    <dl class="row">
        <dt class="col-sm-3">Id</dt>
        <dd class="col-sm-9">@Model.Id</dd>
        <dt class="col-sm-3">Número</dt>
        <dd class="col-sm-9">@Model.Numero</dd>
        <dt class="col-sm-3">Fatura</dt>
        <dd class="col-sm-9">@Model.FaturaId</dd>
        <dt class="col-sm-3">Data</dt>
        <dd class="col-sm-9">@Model.DataEmissao.ToString("g")</dd>
        <dt class="col-sm-3">Total</dt>
        <dd class="col-sm-9">@Model.ValorTotal.ToString("C2")</dd>
    </dl>
</div>
<div class="d-flex justify-content-end">
    <button class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
</div>
