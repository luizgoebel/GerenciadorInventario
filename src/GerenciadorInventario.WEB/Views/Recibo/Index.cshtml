@model GerenciadorInventario.WEB.ViewModels.ReciboVm
@{
    ViewData["Title"] = "Recibos";
}
<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div class="text-muted small">Recibos são gerados via faturamento</div>
        <div class="input-group" style="max-width: 380px;">
            <input id="txtFiltroRecibo" type="number" class="form-control" placeholder="Filtrar por FaturaId..." />
            <button id="btnFiltrarRecibo" class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
        </div>
    </div>

    <div id="reciboTableContainer"></div>
</div>

@section Scripts {
    <script src="~/js/ui.js" asp-append-version="true"></script>
    <script src="~/js/domain/recibo.js" asp-append-version="true"></script>
    <script>
        window.ReciboPage.init();
    </script>
}
